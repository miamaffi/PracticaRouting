<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <h1><%= title %></h1>
    <p><%= mensaje %></p>

    <h2>Lista de autos</h2>
    <% if (listadoAutos && listadoAutos.length > 0) { %>
        <ul>
            <% listadoAutos.forEach(auto => { %>
                <li>
                    Marca: <%= auto.marca %> | 
                    Modelo: <%= auto.modelo %> | 
                    AÃ±o: <%= auto.anio %> | 
                    Color: <%= auto.color %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No hay autos para mostrar</p>
    <% } %>

    <%- include('partials/footer') %>
</body>
</html>
